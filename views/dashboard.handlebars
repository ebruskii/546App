<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" type="text/css" href="/css/style.css">
    <script src="/js/dashboard.js" defer></script>
</head>
<body>

    <!-- left Sidebar -->
    <div class="sidebar bg-light">
        <ul class="navbar-nav">
            <li class="nav-item"><a class="nav-link" href="/dashboard">Feed</a></li>
            <li class="nav-item"><a class="nav-link" href="#">Friends</a></li>
            <!-- More sidebar items -->
        </ul>
    </div>

    <!-- Right Sidebar for Friends List -->
<div class="right-sidebar">
    <h3 class="text-center">My Friends</h3>
    <ul class="navbar-nav">
        {{#each friends}}
        <li class="nav-item">
            <a class="nav-link" href="#">
                {{this.firstName}} {{this.lastName}} 
                <span class="status {{this.status}}"></span>
                <!-- Display login streak next to the name -->
                <small>(Streak: {{this.logStreak}})</small>
            </a>
        </li>
        {{/each}}
    </ul>
</div>


    <!-- Main Content Area -->
    <div class="content">
        <!-- Workout logs displayed like stories -->
        <section class="mt-4">
        <h2>Our FLEXER'S At Work</h2>
        <div>
            <button class="btn btn-primary" id="addWorkout">Add Workout</button>
        </div>
        <div class="stories">
            {{#each workouts}}
            <div class="story bg-light">
                <h6>{{this.userName}}'s Workout</h6> <!-- Displaying the user's name -->
                <p>{{this.type}} - {{this.duration}} mins</p>
                <p class="text-muted"><small>Posted on: {{this.date}}</small></p> <!-- Displaying the date -->
            </div>
            {{/each}}
        </div>
    </section>

        <!-- Challenges displayed like posts -->
        <section class="mt-4">
            <h2>Current Challenges</h2>
            <div class="list-group">
                {{#each challenges}}
                <a href="#" class="list-group-item list-group-item-action flex-column align-items-start">
                    <div class="d-flex w-100 justify-content-between">
                        <h5 class="mb-1">{{this.title}}</h5>
                        <small>{{this.duration}}</small>
                    </div>
                    <p class="mb-1">{{this.description}}</p>
                    <small>Ends on {{this.endDate}}</small>
                </a>
                {{/each}}
            </div>
        </section>
    </div>
    <div class="modal" style="display: none" id="addWorkoutModalType">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Workout Type</h5>
                    <button type="button" class="close" data-dismiss="modal">
                        <span>&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <form id="addWorkoutForm">
                        <div class="form-group">
                            <label for="type">Workout Type</label>
                            <select class="form-group" name="workoutType" id="workoutType">
                                {{#each workoutTypes}}
                                <option value="{{this.type}}">{{this.type}}</option>
                                {{/each}}
                            </select>
                        </div>
                    </div>
                    <button type="submit" id="findWorkout" class="btn btn-primary btn-block">Add Workout</button>
                </form>
            </div>
        </div>
    </div>
    <div class="modal" style="display: none" id="addWorkoutModal">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Add Workout</h5>
                    <button type="button" class="close" data-dismiss="modal">
                        <span>&times;</span>
                    </button>
                </div>
                <div class="modal-body" id="workoutForm">
                </div>
            </div>
        </div>
    </div>
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.7.12/umd.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
